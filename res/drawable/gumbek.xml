<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid 
       			android:color="#aacccccc"/>
            <stroke
                android:width="3dp"
                android:color="#000000" />
            <corners
                android:radius="3dp" />
            <padding
                 android:left="15dp"
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <solid 
       			android:color="#aacccccc"/>
            <stroke
                android:width="3dp"
                android:color="#000000" />
            <corners
                android:radius="3dp" />
            <padding
                 android:left="15dp"
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp" />
        </shape>
    </item>

    <item>        
        <shape>
             <solid 
       			android:color="#80cccccc"/>
            
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="15dp"
                android:top="0dp"
                android:right="15dp"
                android:bottom="0dp" />
        </shape>
    </item>

</selector>